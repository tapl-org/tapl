def collatz_sequence(n: Int):
    # FIXME: Find a better syntax, or write in the doc about this double layer technique for list or dict literals
    sequence = <[]:List(Int)>
    if n < 1:
        return sequence
    while n != 1:
        if n % 2 == 0:
            n = n // 2
        else:
            n = 3 * n + 1
        sequence.append(n)
    return sequence

